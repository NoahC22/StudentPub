<html>

<head>
<title>Own Entries</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</head>

<body>

<div class="container">

    <div class="pb-2 mt-4 mb-2">
        <a href="/homepage" class="button"><button type="button" class="btn btn-danger">Back</button></a>
    </div>

    <h4>List of Items You Have Submitted and That Are Available For Others To Buy</h4>

    <div class="row border-bottom">
        <div class="col-2">
            Image
        </div>
    
        <div class="col-2">
            Name
        </div>

        <div class="col-2">
            QTY
        </div>

        <div class="col-2">
            Price
        </div>

        <div class="col-2">
            Description
        </div>

        <div class="col-2">
            Condition
        </div>
    </div>

    <% for (let cat of itms) { %>
    <div class="row">
        <div class="col-2">

            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="<%= cat.img1 %>" class="d-block w-100">
                  </div>
                  <div class="carousel-item">
                    <img src="<%= cat.img2 %>" class="d-block w-100">
                  </div>
                  <div class="carousel-item">
                    <img src="<%= cat.img3 %>" class="d-block w-100">
                  </div>
                </div>
            </div>

        </div>
    
        <% if(showuser) { %> 
            <div class="col-2">
                <%= cat.name %>
            </div>
        <% } else { %>
            <div class="col-2">
                <a href="/item/<%= cat._id %>"><%= cat.name %></a>
            </div>
        <% } %>

        <div class="col-2">
            <%= cat.qty %>
        </div>

        <% if(cat.az == true) { %>
        <div class="col-2">
            $<%= cat.price %>0
        </div>
        <% } else { %>
            <div class="col-2">
                $<%= cat.price %>
            </div>
        <% } %>

        <div class="col-2">
            <%= cat.description %>
        </div>

        <div class="col-2">
            <%= cat.condition %>
        </div>

        <% if (showuser) { %>
            <div class="pb-2 mt-4 mb-2">
                <a href="/delete/<%= cat._id %>" class="button"><button type="button" class="btn btn-danger">Delete</button></a>
            </div>
        <% } %>
    </div>
    <% } %>

    <% if(showuser) { %>
    <div class="pb-2 mt-4 mb-2">
        <a href="/addoredit" class="button"><button type="button" class="btn btn-danger">Add New Entry</button></a>
    </div>
    <% } else { %>
    <% } %>

</div>

</body>

</html>
