<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>

    <div class="container-fluid mt-2">
        <div class="text-center">
            <img src="https://i.ibb.co/HKGB2vr/Student-Pub-logos-transparent.png" class="rounded-circle" style="height: 200px; width: auto"alt="...">
        </div>
    </div>

    <div class="container-fluid mt-2">
        <% if (locals.user) { %>
            Welcome, <%= user.name %>!
        <% } else { %>
            Welcome Guest!
        <% } %>
    </div>

    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-4">
                <input class="form-control" list="..." id="..." placeholder="Search">
            </div>
            <div class="col-8 container-fluid">
                <div class="row">
                    <% if (locals.user) { %>
                        <div class="col-2">
                            <a href="/user/<%= user.name %>" class="button"><button type="button" class="btn btn-danger">My User Page</button></a>
                        </div>
                        <div class="col-2">
                            <a href="/view_items/<%= user.name %>" class="button"><button type="button" class="btn btn-danger">My Entries</button></a>
                        </div>
                        <div class="col-2">
                            <a href="/logout" class="button"><button type="button" class="btn btn-danger">Sign Out</button></a>
                        </div>
                    <% } else { %>
                        <div class="col-2">
                            <a href="/login" class="button"><button type="button" class="btn btn-danger">Sign In</button></a>
                        </div>
                        <div class="col-2">
                            <a href="/signup" class="button"><button type="button" class="btn btn-danger">Sign Up</button></a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-2">
        <div class="row align-items-center">
            <% if (locals.user) { %>
            <% for (let itm of lists) { %>
                <div class="col-4">
                    <div class="card container-fluid">
                        <img src="http://localhost:8080/<%= itm.img1 %>" class="card-img-top embed-responsive-item">
                            <div class="card-body">
                                <h5 class="card-title"><%= itm.name %></h5>
                                <p class="card-text"><%= itm.description %></p>
                                <h6><%= itm.condition %></h6>
                                <p class="card-text">$<%= itm.price %></p>
                                <a href="/item/<%= itm._id %>" class="btn btn-danger">Select</a>
                            </div>
                    </div>
                </div>
            <% } %>
            <% } %>
        </div>
    </div>
</body>

</html>



