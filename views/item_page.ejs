<html>

<head>
<title>Item Page</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</head>

<body>

<div class="container">

<div class="pb-2 mt-4 mb-2 border-bottom">
  <a href="/homepage" class="button"><button type="button" class="btn btn-danger">Back</button></a>
</div>

<div class="row">
	<div class="col-4">

        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="<%= item.img1 %>" class="d-block w-100">
              </div>
              <div class="carousel-item">
                <img src="<%= item.img2 %>" class="d-block w-100">
              </div>
              <div class="carousel-item">
                <img src="<%= item.img3 %>" class="d-block w-100">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div style="text-align:center">
            <a href="/user/<%= item.user_email %>"><%= item.user_email %></a>
        </div>
	</div>

	<div class="col-4">
    <form method="POST" action="/orderitem/<%= item._id %>">
        <h1><%= item.name %></h1>
        <% if(item.az == true) { %>
          <div>Price: $<%= item.price %>0</div>
        <% } else { %>
          <div>Price: $<%= item.price %></div>
        <% } %>
		    <div>Stock: <%= item.qty %></div>
        <% if (showuser) {%>
        <div>How Many To Buy:</div>
        <div class="form-outline" style="width: 22rem;">
          <input min="1" max="<%= item.qty %>" type="number" id="typeNumber" class="form-control" name="qtyctrl"/>
        </div>      
        <button type="submit" class="btn btn-danger">Buy</button>
        <% } %>
    </form>
	</div>

    <div class="col-4">
        <h3>Description:</h3>
        <div>
            <%= item.description %>
        </div>
        
        <h3>Condition:</h3>
        <div>
            <%= item.condition %>
        </div>
    </div>
</div>


</div>

</body>

</html>
