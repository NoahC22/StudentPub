<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <div class="container-fluid">
            <div class="pb-2 mt-4 mb-3">
              <a href="/view_items" class="button"><button type="button" class="btn btn-danger">Back</button></a>
            </div>
        </div>
        <form method="POST" action="/addtodb" enctype="multipart/form-data">
        <div class="container-fluid">
            <div class="row mt-5">
                <div class="col-2">
                </div>
                <div class="col-7" style="font-size:x-large;">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroup-sizing-lg"><h2>Item name</h2></span>
                        </div>
                        <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" name="itmname">
                      </div>
                      
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-2">
                </div>
                <div class="col-7" style="font-size:x-large;">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroup-sizing-lg"><h2>Description</h2></span>
                        </div>
                        <textarea class="form-control" rows="4" name="itmdesc"></textarea>
                      </div>
                      
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-2">
                </div>
                <div class="col-2" style="font-size:x-large;">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroup-sizing-lg"><h2>Qty</h2></span>
                        </div>
                        <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" name="itmqty">
                      </div>
                      
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-2">
                </div>
                <div class="col-4" style="font-size:x-large;">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroup-sizing-lg"><h2>Condition</h2></span>
                        </div>
                        <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" name="itmcond">
                      </div>
                      
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-2">
                </div>
                <div class="col-3" style="font-size:x-large;">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroup-sizing-lg"><h2>Price</h2></span>
                        </div>
                        <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" name="itmp">
                      </div>
                      
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-2">
                </div>
                <div class="col-8">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><h2>Choose 3 Images</h2></span>
                          </div>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="inputGroupFile04" accept="image/jpeg, image/png, image/jpg" multiple name="itmimg">
                        </div>
                      </div>
                </div>
            </div>
        </div>
            <!-- added for github purposes and testing -->
        <div class="container-fluid">
  
            <div class="row">
                <div class="col-9">

                </div>
                <div class="col-3 mt-5 pb-3">
                    <button type="submit" class="btn btn-danger">Upload</button>
                </div>
            </div>
        </div>
        </form>
    </body>
</html>